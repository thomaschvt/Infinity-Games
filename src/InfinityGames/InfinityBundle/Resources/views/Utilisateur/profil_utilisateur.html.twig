{% extends "::layout.html.twig" %}

{% block contenu_page %}
			<div class="container-fluid">
			    <div class="row-fluid">
				    <div class="span3 ombre" id="bloc_left_profil">
			    		<img src="css/img/default_avatar.jpg" alt="" title=""/>
			    		<div class="span12">
			    			<h1>{{ entity.username }}</h1>
			    		</div>
			    		<div class="span12">
			    			<span>Niveau</span>
			    			<span> {{ niveauExp.intitule }} </span>
			    		</div>
			    		<div class="span12">
			    			<a href="#"><i class="icon-plus"></i></a><span>Crédit : </span>
			    			<span> {{ entity.credits }} </span>
			    			
			    		</div>
			    		<div class="span12">
			    			<a href="#"><i class="icon-star"></i></a><span>Highscore</span>
			    			<span> {{ entity.highScore }} </span>
			    		</div>
				    </div>
				    
				   
				    <div class="span9" id="bloc_right_profil">
				    	<div class="row-fluid">
				    		<h1>Mes informations :</h1>
					    	<div class="span2 upper_bloc_infos">
					    		 <span class="add-on"><i class="icon-user"></i>{{ entity.username }}</span>
					    	</div>
					    	<div class="span4 upper_bloc_infos">
					    		 <span class="add-on"><i class="icon-envelope"></i>{{ entity.email}}</span>
					    	</div>
					    	<div class="span3 upper_bloc_infos">
					    		 <span class="add-on"><i class="icon-tag"></i><a href="#">??</a></span>
					    	</div>
				    	</div>
				    	<div class="row-fluid">
				    		<h1>Messages :</h1>
				    		<div class="btn-group">
								<button class="btn" data-toggle="collapse" data-target="#form_new_msg">Nouveau</button>
								<button class="btn dropdown-toggle" data-toggle="dropdown">
									<span class="caret"></span>
								</button>
								<ul class="dropdown-menu">
									<li>
										<a href="{{ path('messageinterne_delete_all_for_user', { 'id': entity.id }) }}">Vider la boîte de reception</a>
									</li>
								</ul>
							</div>				    		
				    	</div>
				    	<!-- Formulaire d'envoi de message -->
				    		<div id ="form_new_msg" class="row-fluid collapse">
					    		<h1>Envoyer un message</h1>	
						    	<div id="form_msg_profil" class="span12 ombre">
						    		<div class="span4"></div>
						    		<div class="span4">		    	
								    	<form action="{{ path('messageinterne_create') }}" method="post" {{ form_enctype(form) }}>
				   							 {{ form_widget(form) }}
				   							 <p>
				        						<button class="btn" type="submit">Envoyer</button>
				   							 </p>
										</form>
									</div>
									<div class="span3"></div>	
								</div>
							</div>
				    	<!-- Affichage des message propre à l'utilisateur -->		    	
							{% for msg in msgInterne %}		
								<div class="row-fluid line_mail_profil">
									<div class="span12 msg_head" data-toggle="collapse" data-target="#contenu_msg{{ msg.id }}">
										<div class="span3">
											{{ msg.expediteur }}
										</div>
										<div class="span4">
											{{ msg.titreMessage }}
										</div>
										<div class="span3">
											{{ msg.date|date("d/m/Y") }}
										</div>
										<div class="span2">
											<a href="#">Supprimer</a>	
										</div>
									</div>
									<div id="contenu_msg{{ msg.id }}" class="row-fluid collapse">									
											<p  class="bloc_txt ">
												{{ msg.contenuMessage }}
											</p>	
									</div>
								</div>				
			    			{% endfor %}
		    			
					    	<div class="row-fluid">
					    		<div class="span10">
					    			<h1>Message du forum :</h1>
					    		</div>
					    	</div>
				    	{% for msgForum in entityMsgForum %}		
				    		<div class="row-fluid">
				    		<div class="row-fluid line_mail_profil ombre msg_unread">
				    			<div class="span7">{{ msgForum.titre }}</div>
				    			<div class="span3">{{ msgForum.date|date("d.m.Y g:i") }}</div>
				    			<div class="span2">
				    				<a href="" title="Voir le forum infinity games">
				    					<i class="icon-arrow-right"></i>
				    					Voir
				    				</a>
				    			</div>
				    		</div> 
				    	</div>
				    	{% endfor %}
				    	<div class="row-fluid">
				    		<h1>Badges gagnés :</h1>
				    	</div>
				    </div>
			    </div>
    		</div>			
{% endblock %}